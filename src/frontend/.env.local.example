# Environment Configuration for Local Development

# API Configuration
NEXT_PUBLIC_NOCODE_API_URL=http://localhost:8006
NEXT_PUBLIC_AUTH_API_URL=http://localhost:8001
NEXT_PUBLIC_TIMESCALE_API_URL=http://localhost:8003

# Customer Support Service Integration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_SUPPORT_API_URL=http://localhost:8010

# WebSocket Configuration
NEXT_PUBLIC_WS_BASE_URL=ws://localhost:8085/ws
NEXT_PUBLIC_WS_SUPPORT_URL=ws://localhost:8085/ws/support

# Mock Mode (set to 'true' to enable mock data when backend is not running)
NEXT_PUBLIC_MOCK_API=false

# Development Settings
NODE_ENV=development

# Auth Configuration
NEXT_PUBLIC_JWT_SECRET=your-super-secret-jwt-key-change-in-production
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# JWT Configuration (for backend integration)
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=24h

# Support System Feature Flags
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_CHAT=true

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.jpg,.jpeg,.png,.gif

# Real-time Features
NEXT_PUBLIC_TYPING_TIMEOUT=3000
NEXT_PUBLIC_HEARTBEAT_INTERVAL=30000
NEXT_PUBLIC_RECONNECT_ATTEMPTS=5

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_THEME_SWITCHER=true