# Environment Configuration for Local Development

# API Configuration
NEXT_PUBLIC_NOCODE_API_URL=http://localhost:8004
NEXT_PUBLIC_AUTH_API_URL=http://localhost:8001
NEXT_PUBLIC_TIMESCALE_API_URL=http://localhost:8003

# Mock Mode (set to 'true' to enable mock data when backend is not running)
NEXT_PUBLIC_MOCK_API=false

# Development Settings
NODE_ENV=development

# Auth Configuration
NEXT_PUBLIC_JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_DEVTOOLS=true