# Example Terraform variables for Development Environment
# Copy this file to terraform.tfvars and update the values

# Project configuration
project_id   = "your-gcp-project-id"
project_name = "alphintra"
region       = "us-central1"
zone         = "us-central1-a"

# Network security (restrict these in production)
ssh_source_ranges = [
  "0.0.0.0/0"  # Allow SSH from anywhere (dev only)
]

master_authorized_networks = [
  {
    cidr_block   = "0.0.0.0/0"
    display_name = "All networks (dev only)"
  }
  # Add your office/home IP ranges:
  # {
  #   cidr_block   = "203.0.113.0/24"
  #   display_name = "Office Network"
  # }
]

# Feature flags
enable_istio      = true
enable_monitoring = true
enable_logging    = true
enable_debug_mode = true

# Cost optimization
use_preemptible_nodes  = true
auto_scaling_enabled   = true
auto_shutdown_enabled  = false

# Additional labels
additional_labels = {
  team        = "trading"
  cost_center = "engineering"
  owner       = "devops"
}