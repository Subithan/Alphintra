# Alphintra Trading Platform Environment Configuration
# Copy this file to .env.dev, .env.staging, or .env.prod and update values accordingly

# ===============================
# PROJECT CONFIGURATION
# ===============================
COMPOSE_PROJECT_NAME=alphintra
VERSION=latest
ENVIRONMENT=development

# ===============================
# GCP PROJECT CONFIGURATION
# ===============================
GCP_PROJECT_ID=alphintra-trading-platform
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# ===============================
# DATABASE CONFIGURATION
# ===============================
# PostgreSQL (Cloud SQL simulation)
POSTGRES_DB=alphintra
POSTGRES_USER=alphintra
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_PORT=5432

# TimescaleDB
TIMESCALE_DB=timescaledb
TIMESCALE_USER=timescale
TIMESCALE_PASSWORD=your-secure-timescale-password
TIMESCALE_PORT=5433

# ===============================
# CACHE CONFIGURATION
# ===============================
# Redis (Cloud Memorystore simulation)
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379
REDIS_REPLICA_PORT=6380

# ===============================
# MESSAGE QUEUE CONFIGURATION
# ===============================
# Kafka (Pub/Sub simulation)
KAFKA_PORT=9092
KAFKA_EXTERNAL_PORT=9094
ZOOKEEPER_PORT=2181

# Pub/Sub Emulator
PUBSUB_EMULATOR_PORT=8085

# ===============================
# ML/AI CONFIGURATION
# ===============================
# MLflow (Vertex AI simulation)
MLFLOW_PORT=5001

# MinIO (Cloud Storage simulation)
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# ===============================
# MONITORING CONFIGURATION
# ===============================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123
GRAFANA_SECRET_KEY=your-grafana-secret-key

# Jaeger
JAEGER_UI_PORT=16686
JAEGER_GRPC_PORT=14250
JAEGER_HTTP_PORT=14268
JAEGER_ZIPKIN_PORT=9411

# ===============================
# SECURITY CONFIGURATION
# ===============================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-that-should-be-at-least-256-bits-long-for-production

# Vault
VAULT_ROOT_TOKEN=your-vault-root-token

# ===============================
# APPLICATION CONFIGURATION
# ===============================
# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://app.alphintra.com

# ===============================
# EXTERNAL SERVICES
# ===============================
# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Exchange API Keys (Production)
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_SECRET_KEY=your-coinbase-secret-key
COINBASE_PASSPHRASE=your-coinbase-passphrase

# ===============================
# MONITORING & OBSERVABILITY
# ===============================
# Sentry (Error tracking)
SENTRY_DSN=your-sentry-dsn

# New Relic (APM)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# ===============================
# SSL/TLS CONFIGURATION
# ===============================
# SSL Certificate paths
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# ===============================
# BACKUP CONFIGURATION
# ===============================
# Backup retention
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=alphintra-backups
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# ===============================
# PERFORMANCE TUNING
# ===============================
# Resource limits
POSTGRES_MAX_CONNECTIONS=200
REDIS_MAX_MEMORY=1gb
KAFKA_HEAP_OPTS=-Xmx1G -Xms1G